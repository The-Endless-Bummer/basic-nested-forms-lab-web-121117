<%= form_for @recipe do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br>

  <%= f.fields_for :ingredients do |ings| %>
    <%= ings.label :name %>
    <%= ings.text_field :name %><br>

    <%= ings.label :quantity %>
    <%= ings.text_field :quantity %><br>
  <% end %>

  <%= f.submit %>
<% end %>
